<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/product_card_view"
    android:padding="10dp"
    android:layout_marginBottom="20dp"
    app:flexDirection="column"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="space_between"
        android:padding="15dp">
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="110dp"
            app:layout_flexBasisPercent="30%"/>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:layout_flexBasisPercent="70%"
            android:layout_marginStart="10dp"
        >
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:text="Default Product Text"
                />
            <TextView
                android:id="@+id/productPrice"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="$69.420"
                android:textSize="22dp"
                />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="space_between"
        app:alignItems="center">
        <TextView
            android:id="@+id/remove"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="Remove"
            android:textSize="22sp"
            android:layout_marginStart="15dp"
            />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            numberpicker:focusable="false"
            numberpicker:max="10"
            numberpicker:min="0"
            numberpicker:unit="1"
            numberpicker:value="-5"
            numberpicker:custom_layout="@layout/product_quantity_number_picker_custom"
            android:layout_marginEnd="20dp"/>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
